<p id="notice"><%= notice %></p>
<h3><%= @company.name %></h3>
<h5>Trabajadores >> </h5>
<% k = 0 %>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre</th>
      <th scope="col">Apellido</th>
      <th scope="col">Correo</th>
      <th scope="col">√Årea</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @company.employees.each do |employee|%>
      <% k = k + 1 %>
      <th scope="row"><%= k %></th>
      <td><%= employee.first_name %></td>
      <td><%= employee.last_name %></td>
      <td><%= employee.email %></td>
      <td><%= employee.area.name %></td>
      <td><%= link_to "Borrar", company_employee_path(@company, employee), method: :delete%></td>

    </tr>
  </tbody>
  <% end %>
</table>
<h5>Nuevo trabajador >> </h5>

<div class="jumbotron">
  <%= form_with(model: [ @company, Employee.new ], local: true) do |form| %>
    <%= form.hidden_field :company_id, value: @company.id %>
    <div class="row justify-content-md-center">
      <div class="col-md-4">
        <div class="row">
          <div class="col-md-6">
            <div class="field">
              <%= form.label :first_name %>
              <%= form.text_field :first_name, class: 'form-control' %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="field">
              <%= form.label :last_name %>
              <%= form.text_field :last_name, class: 'form-control' %>
            </div>
          </div>
          <div class="col-md-8">
            <div class="field form-group">
              <%= form.label :email %>
              <%= form.text_field :email, class: 'form-control' %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="field">
              <%= form.label :area_id %>
              <%= form.select :area_id, Area.pluck(:name, :id),{}, {class: "form-control"} %>
            </div>
          </div>
          <div class="col-md-4 ">
            <div class="actions form-group">
              <%= form.submit :Enviar, class: 'btn btn-primary' %>
            </div>
          </div>

        </div>
      </div>
    </div>
  <% end %>

</div>

<%= link_to 'Edit', edit_company_path(@company), class: 'btn btn-primary' %> |
